{
  "name": "micayael/php-extras",
  "type": "library",
  "description": "Funciones extras sobre el core de php",
  "keywords": [
    "array filter recursive",
    "sanitize date",
    "remaining days",
    "create table",
    "nl2p",
    "highlight",
    "lipsum",
    "hide email",
    "format url"
  ],
  "homepage": "https://github.com/micayael/php-extras",
  "license": "MIT",
  "authors": [
    {
      "name": "Juan Ardissone (micayael)",
      "email": "micayael@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "symfony/var-dumper": "^3.0",
    "friendsofphp/php-cs-fixer": "^2.11",
    "symfony/phpunit-bridge": "^4.1"
  },
  "autoload": {
    "files": [
      "src/Resources/functions/array_functions.php",
      "src/Resources/functions/date_functions.php",
      "src/Resources/functions/string_functions.php",
      "src/Resources/functions/html_functions.php"
    ],
    "psr-4": {
      "Micayael\\PHPExtras\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Micayael\\PHPExtras\\Tests\\": "tests/"
    }
  }
}
